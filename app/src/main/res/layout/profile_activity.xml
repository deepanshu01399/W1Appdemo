<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Profile_activity"
    android:background="@drawable/gradient"
    >
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="110dp"
    android:src="@drawable/profile_image"
    android:id="@+id/visit_profile_image"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_below="@id/visit_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/all_black_color"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:id="@+id/visit_user_name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey! i am using WECHAT"
        android:layout_below="@id/visit_user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:id="@+id/visit_user_status"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Messages"
        android:layout_below="@id/visit_user_status"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75sp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/home_title_color"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:background="@drawable/button"
        android:id="@+id/send_messsage_request_button"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel chat request"
        android:layout_below="@id/send_messsage_request_button"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75sp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:backgroundTint="#F34444"
        android:visibility="invisible"
        android:id="@+id/decline_message_request_button"
        />



</RelativeLayout>