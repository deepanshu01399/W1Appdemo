<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.deepanshu.whatsappdemo.activity.Login_Activity">

    <ScrollView
        android:layout_width="345dp"
        android:layout_height="628dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/linearlyaout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="4dp"
                app:cardElevation="12dp">


                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailField"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_thirty"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_thirty"
                        android:hint="Email"
                        android:textColorHint="@color/lightgreen"
                        app:boxStrokeColor="@color/black"
                        app:hintEnabled="true"
                        app:hintTextColor="@color/lightgreen"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/login_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:inputType="textImeMultiLine"
                            android:lines="1"

                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/red" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Password_filed"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/emailField"
                        android:layout_marginLeft="@dimen/dp_thirty"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_thirty"
                        android:hint="Password"
                        android:textColorHint="@color/lightgreen"
                        app:boxStrokeColor="@color/black"
                        app:hintEnabled="true"
                        app:hintTextColor="@color/lightgreen"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.38">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/red" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/forgetPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Password_filed"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="end"
                        android:text="forget Password ?"
                        android:textColor="@color/all_black_color"
                        android:textSize="12dp"></TextView>

                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/forgetPassword"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/home_title_color"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="24dp"

                        ></Button>

                    <TextView
                        android:id="@+id/NeedTOcreateAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_button"
                        android:layout_marginTop="1dp"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="Need to create an Account ?"
                        android:textAlignment="center"
                        android:textColor="@color/all_black_color"
                        android:textSize="20dp"
                        tools:ignore="RtlCompat"></TextView>

                    <TextView
                        android:id="@+id/login_using"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/NeedTOcreateAccount"
                        android:layout_marginTop="1dp"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="Or Login using "
                        android:textAlignment="center"
                        android:textColor="@color/all_black_color"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat"></TextView>

                    <Button
                        android:id="@+id/Phone_login_button"
                        android:layout_width="@dimen/twofinvezero"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_using"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="@dimen/_20sp"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/home_title_color"
                        android:drawableStart="@drawable/phone"
                        android:padding="2dp"
                        android:text="Phone"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="24dp"

                        ></Button>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!--<androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_marginTop="40dp"
                android:layout_marginRight="@dimen/sp_16"
                android:background="@color/transparent"
                app:cardBackgroundColor="@color/transparent"
                android:orientation="horizontal">
-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ib_google_login"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/_20sp"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_google_plus" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/fb_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
            <!--
            </androidx.cardview.widget.CardView>
-->

            <!--//it is used for see the details of the facebook login user
            <Button
                android:id="@+id/See_login_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_using"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="@dimen/_20sp"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/home_title_color"
                android:drawableStart="@drawable/phone"
                android:padding="2dp"
                android:text="Phone"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="24dp"

                ></Button>
-->

        </LinearLayout>

    </ScrollView>
</RelativeLayout>