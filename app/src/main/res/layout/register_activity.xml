            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_account"
                android:layout_below="@+id/Password_filed"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/dp_thirty"
                android:layout_marginRight="@dimen/dp_thirty"
                android:backgroundTint="@color/home_title_color"
                android:textSize="24dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:text="Create Account"
                android:background="@drawable/button_background"
                ></Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Already_have_account"
                android:layout_below="@+id/create_account"
                android:layout_marginTop="1dp"
                android:textSize="18dp"
                android:textColor="@color/all_black_color"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Already have an account "
                ></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>/
</RelativeLayout>
