<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".activity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="4dp"
                app:cardElevation="7dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/sp_16"
                    android:layout_marginBottom="@dimen/sp_16"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/signUp_image"
                android:layout_width="300dp"
                android:layout_height="250dp"
                    android:layout_gravity="center"
                android:src="@drawable/signup_photo"
                android:scaleType="fitCenter"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailField"
                android:layout_marginTop="@dimen/dp_20"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_thirty"
                android:layout_marginRight="@dimen/dp_thirty"
                android:textColorHint="@color/lightgreen"
                app:boxStrokeColor="@color/black"
                app:hintEnabled="true"
                android:hint="Email"
                app:hintTextColor="@color/lightgreen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.38">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signUp_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:inputType="textImeMultiLine"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/lightgreen"
                    android:textColorHint="@color/red"
                    android:textSize="@dimen/sp_sixteen" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Password_filed"
                android:layout_marginTop="@dimen/dp_20"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_thirty"
                android:layout_marginRight="@dimen/dp_thirty"
                android:textColorHint="@color/lightgreen"
                app:boxStrokeColor="@color/black"
                app:hintEnabled="true"
                android:hint="password"
                android:layout_below="@+id/emailField"
                app:hintTextColor="@color/lightgreen">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signUp_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:inputType="textImeMultiLine"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/lightgreen"
                    android:textColorHint="@color/red"
                    android:textSize="@dimen/sp_sixteen" />

            </com.google.android.material.textfield.TextInputLayout>

